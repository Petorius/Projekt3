@model IEnumerable<Client.Domain.Product>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
</div>
<h1 class="myButton1">BESTSELLERS</h1>
<div class="container">
    @foreach (var item in Model) {

        <div class="imageFloat">
            <p>
                <a href="@Url.Action("Index", "ProductView", new { id = item.ID })">
                    <img border="0" alt="W3Schools" src="@item.Images[0].ImageSource" width="250" height="250" >
                </a>
            </p>
            <p>
                <b>@item.Name</b>
            </p>
            <p>
                <i>@item.Price DKK</i>
            </p>
        </div>
    }
</div>


